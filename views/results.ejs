<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
  <%- include("partials/header.ejs") %>
    <div id="centerDiv">
      <% for (let row of rows) { %>
        <div id="partitionSectionDiv">
          <h2>
            <%= row.quote %>
          </h2>
          <a class="authors" href="#" authorId="<%= row.authorId %>">
            <%= row.authorId + ' ' + row.firstName + ' ' + row.lastName %>
          </a>
        </div>
        <% } %>

        <!-- normal modal -->
          <!-- <dialog id="authorModal">
            <div id="authorInfo">
              <h2 id="authorName"></h2>
              <img id="outterImage">
              <p id="authorBio"></p>
              <button id="closeModal">Close</button>
            </div>
          </dialog> -->
          
          <!-- bootstrap modal -->
          <dialog id="authorModal" class="border-0 rounded-4 shadow-lg p-0" style="max-width: 500px; width: 90%;">
            <div id="authorInfo" class="card text-center border-0">
              <div class="card-body">
                <h2 id="authorName" class="card-title mb-2"></h2>
                <img id="outterImage" class="img-fluid rounded-circle mb-3 shadow-sm" alt="Author portrait">
                <p id="authorBio" class="card-text text-muted"></p>
                <button id="closeModal" class="btn btn-secondary mt-3">Close</button>
              </div>
            </div>
          </dialog>

          <script src="js/results.js"></script>
    </div>
    <%- include("partials/footer.ejs") %>
</body>

</html>