<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
  <title>Home</title>
</head>

<body class="text-center">
  <%- include("partials/header.ejs") %>
    <form action="/searchByKeyword" method="GET">
      <label>Keyword: <input type="text" name="keyword"></label>
      <button class="btn btn-outline-success">Search</button>
    </form>
    <form action="/searchByAuthor" method="GET">
      <label>Search by author</label>
      <select name="authorId">
        <% for (let authorRow of authorRows) { %>
          <option value="<%= authorRow.authorId %>">
            <%= authorRow.firstName + " " + authorRow.lastName %>
          </option>
          <% } %>
      </select>
      <button class="btn btn-outline-success">Search</button>
    </form>
    <form action="/searchByCategory" method="GET">
      <label>Search by category</label>
      <select name="category">
        <% for (let catRow of categoriesRows) { %>
          <option value="<%= catRow.category %>">
            <%= catRow.category %>
          </option>
          <% } %>
      </select>
      <button class="btn btn-outline-success">Search</button>
    </form>
    <%- include("partials/footer.ejs") %>
</body>

</html>